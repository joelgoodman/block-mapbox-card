{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "onepd-mapbox/location-card",
    "version": "0.1.0",
    "title": "Location Card",
    "category": "widgets",
    "icon": "location",
    "description": "Display a location card with an embedded map.",
    "keywords": ["location", "map", "address"],
    "textdomain": "onepd-mapbox",
    "attributes": {
        "latitude": {
            "type": "number",
            "default": 0
        },
        "longitude": {
            "type": "number",
            "default": 0
        },
        "address": {
            "type": "string",
            "default": ""
        },
        "addressAbbreviation": {
            "type": "string",
            "default": ""
        },
        "mapStyle": {
            "type": "string",
            "default": "streets-v12"
        },
        "zoomLevel": {
            "type": "number",
            "default": 12
        }
    },
    "supports": {
        "html": false,
        "border": true,
        "shadow": true,
        "borderRadius": true,
        "color": {
            "background": true,
            "text": true
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": true
        },
        "align": true,
        "anchor": true
    },
    "editorScript": "file:../../../build/Blocks/LocationCard/index.js",
    "editorStyle": ["file:../../../build/Blocks/LocationCard/index.css", "mapbox-gl", "mapbox-gl-geocoder"],
    "style": ["file:../../../build/Blocks/LocationCard/style-style-index.css", "mapbox-gl", "mapbox-gl-geocoder"]
}
